<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ppostsLayout_textView_PostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ppostsLayout_textView_UserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/ppostsLayout_textView_PostText"
        app:layout_constraintTop_toBottomOf="@+id/ppostsLayout_textView_PostText" />

    <TextView
        android:id="@+id/ppostsLayout_textView_DateTime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/ppostsLayout_textView_UserName"
        app:layout_constraintTop_toBottomOf="@+id/ppostsLayout_textView_UserName" />

    <ImageButton
        android:id="@+id/ppostsLayout_imageButton_Delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#00FFFFFF"
        android:cropToPadding="false"
        android:padding="0px"
        android:scaleType="fitStart"
        app:layout_constraintBottom_toBottomOf="@+id/ppostsLayout_textView_DateTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ppostsLayout_textView_DateTime"
        app:srcCompat="@drawable/ic_trash" />

</androidx.constraintlayout.widget.ConstraintLayout>